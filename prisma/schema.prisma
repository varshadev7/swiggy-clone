datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Restaurant {
  id             String   @id
  name           String
  cuisines       String
  rating         Float
  deliveryTime   Int
  area           String
  imageUrl       String
  isTopRestaurant Boolean

  menus          RestaurantMenu[]
}

model RestaurantMenu {
  id           String      @id @default(cuid())
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  restaurantId String
  categories   String      
}

model Order {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  restaurantId String
  items        String   
  totalAmount  Int     
}
